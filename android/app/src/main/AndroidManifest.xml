<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== Core / networking ===== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- ===== Notifications (Android 13+) ===== -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ===== Sensors ===== -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- ===== Health Connect (AndroidX Health permissions) ===== -->

    <!-- History reads (>30 days) -->
    <uses-permission android:name="android.permission.health.READ_HEALTH_DATA_HISTORY" />

    <!-- Calories -->
    <uses-permission android:name="android.permission.health.READ_TOTAL_CALORIES_BURNED" />
    <uses-permission android:name="android.permission.health.WRITE_TOTAL_CALORIES_BURNED" />

    <!-- Weight -->
    <uses-permission android:name="android.permission.health.READ_WEIGHT" />
    <!-- <uses-permission android:name="android.permission.health.WRITE_WEIGHT" /> -->

    <!-- Exercise sessions (WORKOUT read/write) -->
    <uses-permission android:name="android.permission.health.READ_EXERCISE" />
    <uses-permission android:name="android.permission.health.WRITE_EXERCISE" />

    <!-- Steps -->
    <uses-permission android:name="android.permission.health.READ_STEPS" />
    <!-- <uses-permission android:name="android.permission.health.WRITE_STEPS" /> -->

    <!-- Optional extras (uncomment only if used) -->
    
    <uses-permission android:name="android.permission.health.READ_HEALTH_DATA_IN_BACKGROUND" />
    <!--
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    -->

    <uses-permission android:name="android.permission.health.READ_DISTANCE" />


    <!-- ===== Visibility queries (DeviceApps / HC detect / rationale intent) ===== -->
    <queries>
        <!-- Detect Health Connect app -->
        <package android:name="com.google.android.apps.healthdata" />

        <!-- (Optional) Declare we may query for the HC rationale intent action -->
        <intent>
            <action android:name="androidx.health.ACTION_SHOW_PERMISSIONS_RATIONALE" />
        </intent>
    </queries>

    <application
        android:name="${applicationName}"
        android:label="progressive_overload"
        android:icon="@mipmap/ic_launcher"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name="com.mahamad.fitness.progressive_overload.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Android 13 and lower: show Health Connect permission rationale -->
            <intent-filter>
                <action android:name="androidx.health.ACTION_SHOW_PERMISSIONS_RATIONALE" />
            </intent-filter>
        </activity>

        <!-- Android 14+ (API 34+): permission UI alias (required to display the HC permission UI) -->
        <activity-alias
            android:name="ViewPermissionUsageActivity"
            android:exported="true"
            android:targetActivity="com.mahamad.fitness.progressive_overload.MainActivity"
            android:permission="android.permission.START_VIEW_PERMISSION_USAGE">
            <intent-filter>
                <action android:name="android.intent.action.VIEW_PERMISSION_USAGE" />
                <category android:name="android.intent.category.HEALTH_PERMISSIONS" />
            </intent-filter>
        </activity-alias>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
</manifest>
